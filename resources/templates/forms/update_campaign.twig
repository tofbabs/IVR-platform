                            </ol>
                        </ul>
                        {#<ul class="media-list dropdown-content-body">#}

                        {#<li class="media">#}
                        {#<div class="media-left"><img src="assets/images/demo/users/face25.jpg" class="img-circle img-sm" alt=""></div>#}
                        {#<div class="media-body">#}
                        {#<a href="{{ path_for('logout') }}" class="media-heading">#}
                        {#<span class="text-muted">Sign Out</span>#}
                        {#</a>#}
                        {#</div>#}
                        {#</li>#}
                        {#</ul>#}
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- /main navbar -->


<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main sidebar-default">
            <div class="sidebar-content">
                <!-- Main navigation -->
                <div class="sidebar-category sidebar-category-visible">
                    <div class="category-content no-padding">
                        <ul class="navigation navigation-main navigation-accordion">

                            <!-- SIDEBAR USERPIC -->
                            <div class="profile-userpic">
                                <img src="/images/eti_logo.jpg" class="img-responsive" alt="">
                            </div>
                            <!-- SIDEBAR BUTTONS -->
                            <div class="profile-userbuttons">
                                <a href="{{ path_for('upload') }}"><button type="button" class="btn btn-success btn-sm"><span style="font-size:smaller;">Upload</span></button></a>
                                <a href="{{ path_for('create_campaign') }}"><button type="button" class="btn btn-primary btn-sm"><span style="font-size:smaller;">Campaign</span></button></a>
                            </div>

                            
                            <!-- Main -->
                            <li class="navigation-header"><span>Main</span> <i class="icon-menu" title="Main pages"></i>
                            </li>
                            <li class="active"><a href="{{ path_for('index') }}"><i class="icon-home4"></i> <span>Dashboard</span></a>
                            </li>
                            {% if user.is_admin %}
                                <li>
                                    <a href="{{ path_for('accounts') }}"><i class="icon-users"></i>
                                        <span>Accounts</span></a>
                                    <ul>
                                        <li><a href="{{ path_for('create_account') }}">Create Account </a></li>
                                        <li><a href="{{ path_for('accounts') }}">View Accounts</a></li>
                                    </ul>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path_for('campaigns') }}"><i class="icon-stack2"></i> <span>Campaigns</span></a>
                                <ul>
                                    <li><a href="{{ path_for('create_campaign') }}">Create Campaign </a></li>
                                    <li><a href="{{ path_for('campaigns') }}">View Campaigns</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="icon-copy"></i> <span>File Manager</span></a>
                                <ul>
                                    <li><a href="{{ path_for('upload') }}">Upload Files</a></li>
                                    <li><a href="{{ path_for('files') }}">View Files</a></li>

                                </ul>
                            </li>
                            <li>
                                <a href="{{ path_for('reports') }}"><i class="icon-stack"></i> <span>Reports</span></a>

                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->


        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Page header -->
            <div class="page-header page-header-default">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Campaigns</span>
                            - Update Campaign</h4>
                    </div>

                </div>

                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><a href="{{ path_for('index') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                        <li><a href="{{ path_for('campaigns') }}">Campaigns</a></li>
                        <li class="active">Update Campaign</li>
                    </ul>

                    <ul class="breadcrumb-elements">
                        {#<li><a href=""><i class="icon-comment-discussion position-left"></i> Support</a></li>#}
                        {% if user.is_admin %}
                            <li><a href="{{ path_for('settings') }}"><i class="icon-gear position-left"></i> Settings</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <!-- /page header -->


            <!-- Content area -->
            <div class="content">

                <!-- Form horizontal -->
                <div class="panel panel-flat">
                    {#<div class="panel-heading">#}
                    {#<h5 class="panel-title">Create a new campaign/advert to be played for users dialing wrong numbers</h5>#}
                    {#</div>#}

                    <div class="panel-body">
                        <form class="form-horizontal"
                              action="{{ path_for('campaign', {'campaign_id':  campaign.id }) }}" method="post">
                            <fieldset class="content-group">
                                <legend class="text-bold">BASIC INPUTS</legend>

                                <div class="form-group">
                                    <label class="control-label col-lg-2"><strong>Name</strong></label>
                                    <div class="col-lg-10">
                                        <input type="text" name="name" id="name" class="form-control"
                                               placeholder="Enter Name here" value="{{ campaign.name }}" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-2"><strong>Description</strong></label>
                                    <div class="col-lg-10">
                                        <textarea rows="5" cols="5" class="form-control"
                                                  placeholder="Enter description here" name="description"
                                                  id="description">{{ campaign.description }}</textarea>
                                    </div>
                                </div>
                                <div class="form-group {% if form.start_date.errors %}has-error{% endif %}">
                                    <div class="alert-error">
                                        {{ form.start_date.errors }}
                                    </div>
                                    <label class="control-label col-lg-2"><strong>Start Date:</strong></label>
                                    <div class="col-lg-10">
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                {#<i class="fa fa-calendar"></i>#}
                                                <i class="ion-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="start_date"
                                                   id="start_date" value="{{ start }}" required>
                                        </div>
                                    </div>
                                    <!-- /.input group -->
                                </div>

                                <div class="form-group {% if form.end_date.errors %}has-error{% endif %}">
                                    <div class="alert-error">
                                        {{ form.end_date.errors }}
                                    </div>
                                    <label class="control-label col-lg-2"><strong>End Date:</strong></label>
                                    <div class="col-lg-10">
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                {#<i class="fa fa-calendar"></i>#}
                                                <i class="ion-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="end_date"
                                                   id="end_date" value="{{ end }}">
                                        </div>
                                    </div>
                                    <!-- /.input group -->
                                </div>

                                {#<div class="form-group">#}
                                {#<label class="control-label col-lg-2">Scheduled time:</label>#}
                                {#<div class="col-lg-10">#}
                                {#<div class="input-group">#}
                                {#<span class="input-group-addon"><i class="icon-alarm"></i></span>#}
                                {#<input type="text" class="form-control pickatime-hidden" placeholder="time" required>#}
                                {#</div>#}
                                {#</div>#}
                                {#</div>#}

                                {#<div class="form-group {% if form.scheduled_time.errors %}has-error{% endif %}">#}
                                {#<div class="alert-error">#}
                                {#{{ form.scheduled_time.errors }}#}
                                {#</div>#}
                                {#<label class="control-label col-lg-2"><strong>Scheduled time:</strong></label>#}
                                {#<div class="col-lg-10">#}
                                {#<div class="input-group bootstrap-timepicker timepicker">#}
                                {#<input id="scheduled_time" name="scheduled_time" type="text"#}
                                {#class="form-control input-small" value="{{ campaign.scheduled_time }}">#}
                                {#<span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>#}
                                {#</div>#}
                                {#</div>#}
                                {#</div>#}


                            </fieldset>

                            <fieldset class="content-group">
                                {#<legend class="text-bold">Attach File</legend>#}

                                {#<div class="form-group">#}
                                {#<label class="control-label col-lg-2">Audio file</label>#}
                                {#<div class="col-lg-10">#}
                                {#<input type="file" class="file-styled" name="advert_file" id="advert_file">#}
                                {#</div>#}
                                {#</div>#}
                                <div class="form-group">
                                    <label class="control-label col-lg-2"><strong>Select Uploaded File</strong></label>
                                    <div class="col-lg-10">
                                        <select name="file" class="form-control" id="file"
                                                {% if campaign %}disabled{% endif %}>
                                            {% for file in files %}
                                                <option {% if campaign.file_path == file.file_path %}selected{% endif %}
                                                        value="{{ file.name }}">{{ file.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset class="content-group">
                                <legend class="text-bold">CONFIGURE CALL TO ACTION</legend>

                                <div class="form-group">
                                    <label class="control-label col-lg-2"><strong>Subscription Key</strong></label>
                                    <div class="col-lg-2">
                                        <input type="text" name="number" id="number" maxlength="1" class="form-control" value="*" placeholder="Number">
                                    </div>
                                    <span class="col-sm-1"></span>
                                    <label class="control-label col-lg-2"><strong>Action</strong></label>
                                    <div class="col-lg-2">
                                        <select name="value" class="form-control" id="value">
                                            {% for option in options  %}
                                                <option value="{{ option.value }}" {% if campaign.value == option.value %}selected{% endif %}>{{ option.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-2"><strong>Subscription Url</strong></label>
                                    <div class="col-lg-3">
                                        <input type="text" name="body" id="body" class="form-control" value="{{ campaign.body }}" placeholder="Enter subscription url here">
                                    </div>
                                    <label class="control-label col-sm-2"><strong>Request Method</strong></label>
                                    <div class="col-sm-1">
                                        <select name="request" class="form-control" id="request">
                                            <option value='GET'>GET</option>
                                            {#<option value='POST' {% if action.request == 'POST' %}selected{% endif %}>POST</option>#}
                                        </select>
                                    </div>
                                    <span class="col-sm-1"></span>
                                    <label class="control-label col-lg-1"><strong>Parameter</strong></label>
                                    <div class="col-sm-2">
                                        <input type="text" name="parameter" id="parameter" class="form-control" value="msisdn" placeholder="Phone/Msisdn parameter">
                                    </div>
                                </div>

                            </fieldset>

                            <div class="text-right">
                                <button type="submit" class="btn btn-success">Submit <i
                                            class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /form horizontal -->


                <!-- Footer -->
                <div class="footer text-muted">
                    &copy;copyright TM30.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Core JS files -->
<script type="text/javascript" src="../../../static/js/plugins/loaders/pace.min.js"></script>
